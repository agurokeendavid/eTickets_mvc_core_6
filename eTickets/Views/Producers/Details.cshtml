@model Producer

@{
    ViewData["Title"] = "Details of the Producer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width: 150px;" id="ProfilePicturePreview" alt="Profile Picture Preview">
                </div>
                <div class="mb-3">
                    <label asp-for="ProfilePictureURL" class="control-label"></label>
                    <input type="text" asp-for="ProfilePictureURL" class="form-control" readonly>
                    <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="FullName" class="control-label"></label>
                    <input type="text" asp-for="FullName" class="form-control" readonly>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Bio" class="control-label"></label>
                    <input type="text" asp-for="Bio" class="form-control" readonly>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a class="btn btn-outline-success float-end" asp-action="Edit" asp-route-id="@Model.Id">Update</a>
                    }
                    <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script type="text/javascript" src="~/modules/producers/details.js"></script>
}