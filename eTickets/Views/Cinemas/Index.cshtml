@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "List of Cinemas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
            <tr class="text-center">
                <th>@Html.DisplayNameFor(m => m.Logo)</th>
                <th>@Html.DisplayNameFor(m => m.Name)</th>
                <th>@Html.DisplayNameFor(m => m.Description)</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width: 150px;">
                    </td>
                    <td class="align-middle">@Html.DisplayFor(m => item.Name)</td>
                    <td class="align-middle">@Html.DisplayFor(m => item.Description)</td>
                    <td class="align-middle">
                        <a href="#" class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a> |
                        <a href="#" class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a> |
                        <a href="#" class="btn btn-outline-danger"><i class="bi bi-trash"></i>Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>